<%= field_wrapper **field_wrapper_args do %>
  <%= content_tag :div, data: {
      controller: "month-field",
      month_field_view_value: @view,
      month_field_format_value: @field.format,
      month_field_picker_format_value: @field.picker_format,
      month_field_disable_mobile_value: @field.disable_mobile,
      month_field_picker_options_value: @field.picker_options,
  } do %>
    <%= @form.text_field @field.id,
      value: @field.edit_formatted_value,
      class: classes("w-full #{"hidden" unless params[:avo_show_hidden_inputs]}"),
      data: {
        'month-field-target': 'input',
        placeholder: @field.placeholder,
        **@field.get_html(:data, view: view, element: :input)
      },
      disabled: disabled?,
      placeholder: @field.placeholder,
      style: @field.get_html(:style, view: view, element: :input)
    %>
    <%= date_field "fake_#{@field.id}", "fake",
      value: @field.edit_formatted_value,
      class: classes("w-full"),
      data: {
        'month-field-target': 'fakeInput',
        placeholder: @field.placeholder,
        **@field.get_html(:data, view: view, element: :input)
      },
      disabled: disabled?,
      placeholder: @field.placeholder,
      style: @field.get_html(:style, view: view, element: :input)
    %>
  <% end %>
<% end %>
